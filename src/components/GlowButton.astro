---
type Props = {
  href?: string;
  target?: "_blank" | "_self";
  variant?: "primary" | "ghost";
  className?: string;
};

const { href, target = "_self", variant = "primary", className = "" } = Astro.props as Props;
const rel = target === "_blank" ? "noreferrer noopener" : undefined;
---

{
  href ? (
    <a href={href} target={target} rel={rel} class={`glow-btn ${variant} ${className}`.trim()}>
      <slot />
    </a>
  ) : (
    <button type="button" class={`glow-btn ${variant} ${className}`.trim()}>
      <slot />
    </button>
  )
}

<style>
  .glow-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    border-radius: 999px;
    border: 1px solid transparent;
    font-weight: 600;
    letter-spacing: 0.01em;
    padding: 0.62rem 1.05rem;
    transition:
      transform 180ms ease,
      box-shadow 180ms ease,
      border-color 180ms ease,
      color 180ms ease,
      background-color 180ms ease;
  }

  .glow-btn.primary {
    color: #02111f;
    background: linear-gradient(140deg, var(--accent-primary), var(--accent-secondary));
    box-shadow: var(--shadow-glow);
  }

  .glow-btn.ghost {
    color: var(--text-main);
    border-color: var(--border);
    background: rgba(8, 13, 34, 0.6);
  }

  .glow-btn:hover {
    transform: translateY(-1px);
    border-color: rgba(76, 242, 200, 0.75);
  }

  .glow-btn.primary:hover {
    color: #000c17;
  }
</style>
