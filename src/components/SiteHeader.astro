---
import { NAV_LINKS } from "@/consts";
---

<header class="site-header">
  <div class="container header-row">
    <a href="/" class="brand" aria-label="Harder.dev home">
      <img src="/img/icon.png" alt="" width="32" height="32" />
      <div>
        <strong>harder.dev</strong>
        <span>retro-future signal lab</span>
      </div>
    </a>

    <nav class="desktop-nav" aria-label="Main navigation">
      <ul>
        {
          NAV_LINKS.map((item) => (
            <li>
              <a href={item.href}>{item.label}</a>
            </li>
          ))
        }
      </ul>
    </nav>

  </div>

  <details class="mobile-nav container">
    <summary>Navigation</summary>
    <ul>
      {
        NAV_LINKS.map((item) => (
          <li>
            <a href={item.href}>{item.label}</a>
          </li>
        ))
      }
    </ul>
  </details>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 80;
    backdrop-filter: blur(10px);
    background: linear-gradient(
      to bottom,
      rgba(3, 6, 20, 0.9),
      rgba(3, 6, 20, 0.82) 65%,
      rgba(3, 6, 20, 0.5)
    );
    border-bottom: 1px solid rgba(108, 151, 232, 0.18);
  }

  .header-row {
    min-height: 72px;
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: space-between;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.65rem;
  }

  .brand strong {
    display: block;
    font-family: "Chakra Petch", sans-serif;
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }

  .brand span {
    display: block;
    color: var(--text-muted);
    text-transform: uppercase;
    font-size: 0.66rem;
    letter-spacing: 0.13em;
  }

  .desktop-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 0.65rem;
  }

  .desktop-nav a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--text-soft);
    border-radius: 999px;
    padding: 0.4rem 0.7rem;
    border: 1px solid transparent;
    font-size: 0.92rem;
  }

  .desktop-nav a:hover,
  .desktop-nav a[aria-current="page"] {
    border-color: var(--border);
    color: var(--accent-primary);
    background: rgba(8, 15, 38, 0.66);
  }

  .mobile-nav {
    display: none;
    margin-bottom: 0.7rem;
  }

  .mobile-nav summary {
    list-style: none;
    cursor: pointer;
    border-radius: 10px;
    border: 1px solid var(--border);
    padding: 0.5rem 0.8rem;
    color: var(--text-soft);
    background: rgba(10, 17, 44, 0.7);
  }

  .mobile-nav ul {
    margin: 0.7rem 0 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.45rem;
  }

  .mobile-nav a {
    display: block;
    border-radius: 10px;
    border: 1px solid rgba(148, 187, 255, 0.18);
    background: rgba(8, 15, 39, 0.7);
    color: var(--text-soft);
    padding: 0.55rem 0.7rem;
  }

  @media (max-width: 920px) {
    .desktop-nav {
      display: none;
    }

    .mobile-nav {
      display: block;
    }

  }
</style>
