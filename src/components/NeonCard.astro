---
type Props = {
  as?: "article" | "section" | "div";
  className?: string;
};

const { as = "article", className = "" } = Astro.props as Props;
const Component = as;
---

<Component class={`neon-card ${className}`.trim()}>
  <slot />
</Component>

<style>
  .neon-card {
    border-radius: var(--radius-card);
    border: 1px solid var(--border);
    background:
      linear-gradient(to bottom right, rgba(20, 32, 78, 0.78), rgba(9, 14, 35, 0.95)),
      var(--surface-1);
    box-shadow:
      0 16px 32px rgba(3, 7, 24, 0.45),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    padding: 1.15rem;
    transition:
      border-color 160ms ease,
      transform 160ms ease,
      box-shadow 160ms ease;
  }

  .neon-card:hover {
    transform: translateY(-2px);
    border-color: rgba(76, 242, 200, 0.6);
    box-shadow:
      0 18px 30px rgba(2, 8, 28, 0.58),
      inset 0 0 0 1px rgba(76, 242, 200, 0.2);
  }
</style>
