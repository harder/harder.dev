---
import BaseLayout from "@/layouts/BaseLayout.astro";
import NeonCard from "@/components/NeonCard.astro";
import GlowButton from "@/components/GlowButton.astro";
import TerminalPanel from "@/components/TerminalPanel.astro";
import LiveSignalsWidget from "@/components/islands/LiveSignalsWidget";

const workerBaseUrl = import.meta.env.PUBLIC_AI_WORKER_URL || "";
---

<BaseLayout>
  <section class="section">
    <div class="container split">
      <div>
        <p class="muted">harder.dev â€¢ practical notes from the edge</p>
        <h1 class="hero-title">AI and agentic systems, tested with real engineering discipline.</h1>
        <p class="hero-subtitle">
          I have been building software for over 20 years. This site is where I track what is new, run small
          experiments, and share what actually holds up when you have to run it in production.
        </p>
        <div class="hero-actions">
          <GlowButton href="/principles">View Principles</GlowButton>
          <GlowButton href="/signals" variant="ghost">Live Signals</GlowButton>
        </div>
      </div>

      <TerminalPanel title="current mode">
        <p>
          <strong style="color: var(--accent-primary)">Focus:</strong> model and framework releases worth paying
          attention to.
        </p>
        <p>
          <strong style="color: var(--accent-secondary)">Approach:</strong> prototype quickly, then tighten architecture,
          testing, and observability.
        </p>
        <p>
          <strong style="color: var(--accent-tertiary)">Constraint:</strong> trusted sources, clear guardrails, and no
          hype-driven shortcuts.
        </p>
      </TerminalPanel>
    </div>
  </section>

  <section class="section">
    <div class="container grid grid-3">
      <NeonCard>
        <h2 style="font-size:1.2rem;">Stay Current Without Chasing Noise</h2>
        <p style="margin-top:0.6rem;">Watch releases and changes early, then filter aggressively for signal.</p>
      </NeonCard>
      <NeonCard>
        <h2 style="font-size:1.2rem;">Experiment With Purpose</h2>
        <p style="margin-top:0.6rem;">Use short loops, clear hypotheses, and measurable outcomes.</p>
      </NeonCard>
      <NeonCard>
        <h2 style="font-size:1.2rem;">Build Like It Will Be Maintained</h2>
        <p style="margin-top:0.6rem;">
          Favor simple designs, solid interfaces, and systems your team can support at 2 AM.
        </p>
      </NeonCard>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-header">
        <div>
          <h2 class="section-title">Live Signal Preview</h2>
          <p class="section-subtitle">A friendly radar for AI and software engineering changes that actually matter.</p>
        </div>
        <GlowButton href="/signals" variant="ghost">Open Full Signals</GlowButton>
      </div>
      <LiveSignalsWidget client:visible maxItems={4} workerBaseUrl={workerBaseUrl} />
    </div>
  </section>
</BaseLayout>
