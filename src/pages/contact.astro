---
import BaseLayout from "@/layouts/BaseLayout.astro";
import NeonCard from "@/components/NeonCard.astro";
import GlowButton from "@/components/GlowButton.astro";
---

<BaseLayout title="Contact | harder.dev" description="Get in touch with harder.dev.">
  <section class="page-hero">
    <div class="container">
      <p class="muted">/contact</p>
      <h1 class="hero-title">Establish Contact</h1>
      <p class="hero-subtitle">
        Want to compare notes, swap ideas, re-connect about past experiences, or have a question? Open a channel with Kevin.
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container grid grid-2">
      <NeonCard>
        <h2 style="font-size:1.35rem;">Primary</h2>
        <p style="margin-top:0.55rem;">
          The most direct path. Please be nice.
        </p>
        <div class="hero-actions" style="margin-top:0.9rem;">
          <GlowButton href="mailto:kevin@harder.dev">kevin@harder.dev</GlowButton>
        </div>
      </NeonCard>

      <NeonCard>
        <h2 style="font-size:1.35rem;">Social Nodes</h2>
        <p style="margin-top:0.55rem;">Where I broadcast to.</p>
        <div class="hero-actions" style="margin-top:0.9rem;">
          <GlowButton href="https://www.linkedin.com/in/KevinHarder" target="_blank" variant="ghost">
            LinkedIn / @KevinHarder
          </GlowButton>
          <GlowButton href="https://github.com/harder" target="_blank" variant="ghost">
            GitHub / @harder
          </GlowButton>
          <GlowButton href="https://x.com/kevinharder" target="_blank" variant="ghost">
            X / @kevinharder
          </GlowButton>
        </div>
      </NeonCard>
    </div>
  </section>
</BaseLayout>
